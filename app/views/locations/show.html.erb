<div class="jumbotron">
<h1><%= @location.city_name %>, <%= @location.state_name %></h1>
<h2><%= @location.location_description %></h2>
</div>

<% @location.recommendations.each do |recommendation| %>
  <h3><%= link_to recommendation.recommended_place, location_recommendation_path(@location, recommendation) %></h3>
<% end %>

<% if @user == @logged_in_user %>
  <p><%= link_to "New Recommendation", new_location_recommendation_path(@location, @recommendation), class: "btn btn btn-primary" %></p>
<%end%>

<p><%= link_to "Back", :back, class: "btn btn btn-primary" %></p>
