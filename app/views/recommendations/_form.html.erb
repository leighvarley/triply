<%= form_for [@location, @recommendation] do |f| %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= f.label :Place %><br>
    <%= f.text_field :recommended_place, :placeholder=> "What's the spot?" %>

    <%= f.label :Description %><br>
    <%= f.text_field :body, :placeholder=> "What's it like?" %>

    <%= f.submit "Save recommendation", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Back", :back, class: "btn btn-primary" %>

  </div>
</div>
